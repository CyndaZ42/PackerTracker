<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>My Packing List!</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>

<body>
  @using PackerTracker.Models;

  <h1>Packing List</h1>

  @if (Model.Count == 0)
  {
    <p>There are no items in your packing list.</p>
  }


  @foreach (Item item in Model)
  {
    <div id='@item.Id'>
      <input type="checkbox" id='@item.Id' name='@item.Id' @item.Checked >
      <label for="scales">  <a href='/items/@item.Id'> @item.Description</a></label>
    </div>
  }

  

  <a href="/items/new">Add a new item.</a>

  <form action="/items/delete" method="post">
    <button type="submit" name="button">Clear All Items</button>
  </form>
</body>

</html>